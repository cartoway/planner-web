<div class="panel panel-default zone">
  <div class="panel-heading">
    <div>
      <input name="zoning[zones_attributes][][id]" type="hidden" value="{{id}}" />
      {{#manage_edit}}
      <input class="form-control zone-name" type="text" value="{{name}}" name="zoning[zones_attributes][][name]" placeholder="{{#i18n}}zonings.form.zone_placeholder{{/i18n}} #{{index}}" {{^manage_organize}}disabled{{/manage_organize}} />
      {{/manage_edit}}
      {{^manage_edit}}
      <div class="form-control zone-name">{{name}}{{^name}}{{#i18n}}zonings.form.zone_placeholder{{/i18n}} #{{index}}{{/name}}</div>
      {{/manage_edit}}
      <div class="btn-group pull-right">
        <button type="button" class="delete btn btn-danger btn-xs" title="{{#i18n}}all.verb.destroy{{/i18n}}"><i class="fa fa-trash fa-fw"></i></button>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <input name="zoning[zones_attributes][][polygon]" type="hidden" value="{{polygon}}" />
    <div class="form-group">
      <label class="col-md-3 control-label" for="vehicle_select">{{#i18n}}zonings.form.zone_vehicle{{/i18n}}</label>
      <div class="col-md-9">
        <select name="zoning[zones_attributes][][vehicle_id]" class="vehicle_select select2-xs">
            <option value=""></option>
          {{#vehicles}}
            <option value="{{id}}"{{#selected}} selected="selected"{{/selected}}>{{name}}</option>
          {{/vehicles}}
        </select>
      </div>
    </div>
    <div class="form-group avoid-zone"{{^router_avoid_zones}} style="display: none"{{/router_avoid_zones}}>
      <div class="col-md-12">
        <label><input type="checkbox" name="zoning[zones_attributes][][avoid_zone]"{{#avoid_zone}} checked{{/avoid_zone}}> {{#i18n}}zonings.form.avoid_zone{{/i18n}}</label>
      </div>
    </div>
    <span class="zone-info" style="display: none"><i class="fa fa-check-square fa-fw"></i><span class="stop_number"></span> {{#i18n}}plannings.edit.stops{{/i18n}}</span>
    {{#show_deliverable_units}}
    <span class="zone-info" style="display: none">
      {{#deliverable_units}}
        <span data-unit-id="{{unit_id}}">
          <i class="fa {{unit_icon}} fa-fw"></i><span class="quantity_number"></span>/<span class="capacity_number">{{#capacity}}{{capacity}}{{/capacity}}{{^capacity}}-{{/capacity}}</span>{{#unit_label}}&nbsp;{{unit_label}}{{/unit_label}}
        </span>
      {{/deliverable_units}}
    </span>
    {{/show_deliverable_units}}
  </div>
</div>
