      <% if route.stop_out_of_drive_time %>
<%= t 'plannings.edit.error.out_of_drive_time' %>
      <% end %>
      <% if route.stop_out_of_work_time %>
<%= t 'plannings.edit.error.out_of_work_time' %>
      <% end %>
