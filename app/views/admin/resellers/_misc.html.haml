%fieldset
  %legend
    %i.fa.fa-puzzle-piece{"aria-hidden" => "true"}
    = t 'admin.resellers.edit.misc'
  .row
    %label.col-md-offset-2.col-md-8.field
      = t('activerecord.attributes.reseller.carbon_dioxyde_average')
    .col-md-offset-2.col-md-8.field
      .input-group
        = f.number_field :carbon_dioxyde_average, min: 0, step: 0.001, class: 'form-control', control_col: '', label_col: 'd-none', placeholder: t('activerecord.attributes.reseller.carbon_dioxyde_average_default')
        %span.input-group-addon
          = t 'all.unit.kgco2e_delivery_html'
      %p.help-block
        = t('admin.resellers.form.carbon_dioxyde_average_help')
