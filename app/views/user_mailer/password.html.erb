<table cellspacing="0" cellpadding="0" width="600" class="w320">
  <tr>
    <td class="header-lg">
      <p><%= I18n.t('user_mailer.password.title') %></p>
    </td>
  </tr>
  <tr>
    <td>
      <p style="font-weight:800;">
        <%= I18n.t('user_mailer.password.welcome', name: @user.customer.reseller&.name) %>
      </p>
      <p>
        <%= I18n.t('user_mailer.password.detail.content', application_name: @application_name, limit: @subscription_duration && user.customer.test ? I18n.t('user_mailer.password.detail.limit', days: @subscription_duration) : '').html_safe %>
        <br/>
        <b><%= I18n.t('user_mailer.password.detail.define', test: user.customer.test ? I18n.t('user_mailer.password.detail.test') : '').html_safe %></b>
      </p>
    </td>

  </tr>
  <tr>
    <td class="button">
      <div>
        <a target="_blank" class="button-mobile" href="<%= @confirmation_link %>" style="margin-bottom: 15px;padding:5px;font-weight:800; color:#13b0ca; border: 1px solid #13b0ca; border-radius: 2px; box-shadow: 3px 3px 1px rgba(25, 166, 190, 0.49);display:inline-block;font-family:'montserrat', Helvetica, Arial, sans-serif;font-size:14px;line-height:45px;text-align:center;text-decoration:none;width:155px;-webkit-text-size-adjust:none;">
          <%= I18n.t('user_mailer.password.detail.link') %>
        </a>

        <p>
          <%= I18n.t('user_mailer.layout.staff.greetings').html_safe %>
        </p>
        <p class="signature">
          <%= I18n.t('user_mailer.layout.staff.signature', name: @user.customer.reseller&.name).html_safe %>
        </p>
      </div>
    </td>
  </tr>
</table>

<% content_for :footer do %>
  <td align="center" valign="top" width="100%" class="white-background;"  border-top: 1px solid #e5e5e5; border-bottom: 1px solid #e5e5e5;">

    <div style="min-width:215.53px;margin:5px; padding:10px;display:inline-block; color:#838383; font-family:'montserrat', Helvetica, Calibri, sans-serif; line-height: 21px;font-size:12px;" class="align-center outlook-font">
      <b><%= I18n.t('user_mailer.footer.first_step').html_safe %></b>
    </div>

    <div style=";margin:5px; padding:10px;display:inline-block; color:#838383; font-family:'montserrat', Helvetica, Calibri, sans-serif; line-height: 21px;font-size:12px;" class="align-center outlook-font">
      <b> >>> </b>
    </div>

    <div style="margin:5px; margin-bottom:20px;margin-top:20px; padding:10px; display:inline-block; color:#a7a7a7; font-family: 'montserrat', Helvetica, Calibri, sans-serif; line-height: 21px;font-size:12px;" class="align-center outlook-font">
      <%= I18n.t('user_mailer.footer.second_step').html_safe %>
    </div>

  </td>
<% end %>
