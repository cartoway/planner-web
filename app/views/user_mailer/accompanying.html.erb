<table cellspacing="0" cellpadding="0" width="600" class="w320">
  <tr>
    <td class="header-lg">
      <p><%= I18n.t('user_mailer.accompanying.title') %></p>
    </td>
  </tr>
  <tr>
    <td>
      <p>
        <%= raw I18n.t('user_mailer.accompanying.content') %>
      </p>
    </td>
  </tr>
  <tr>
    <td class="button">
      <div>
        <a target="_blank" class="button-mobile" href="<%= @contact_url + @parameters[:link] %>" style="margin-bottom: 15px;padding:5px;font-weight:800; color:#13b0ca; border: 1px solid #13b0ca; border-radius: 2px; box-shadow: 3px 3px 1px rgba(25, 166, 190, 0.49);display:inline-block;font-family:'montserrat', Helvetica, Arial, sans-serif;font-size:14px;line-height:45px;text-align:center;text-decoration:none;width:155px;-webkit-text-size-adjust:none;">
          <%= I18n.t('user_mailer.accompanying.link') %>
        </a>

        <p>
          <%= I18n.t('user_mailer.layout.staff.greetings').html_safe %>
        </p>
        <p class="signature">
          <%= I18n.t('user_mailer.layout.staff.signature', name: @user.customer.reseller.name).html_safe %>
        </p>
      </div>
    </td>
  </tr>
</table>

<% content_for :footer do %>
  <%= render 'user_mailer/user_mail_layouts/full_links_footer' %>
<% end %>
