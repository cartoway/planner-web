<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render partial: 'layouts/head' %>
  </head>

  <body>
    <div class="main container error-page">
      <div class="row">
        <div class="col-xs-offset-3 col-xs-6 col-md-offset-4 col-md-4 header">
          <% if request.env['reseller'].website_url %>
            <a href="<%= request.env['reseller'].website_url.gsub('{LG}', I18n.locale.to_s) %>">
          <% end %>
          <%= image_tag request.env['reseller'].logo_large.url || 'logo.svg', alt: request.env['reseller'].name, class: 'mapotempo-logo' %>
          <% if request.env['reseller'].website_url %>
            </a>
          <% end %>
        </div>
      </div>

      <%= yield %>

      <div class="row">
        <div class="col-md-offset-2 col-md-8 footer">
          <ul>
            <% if request.env['reseller'].help_url %>
              <li><%= link_to request.env['reseller'].help_url.gsub('{LG}', I18n.locale.to_s) do %>
                  <i class="fa fa-info-circle fa-fw"></i> <%= I18n.t('web.help') %>
                <% end %></li>
            <% end %>
            <% if request.env['reseller'].contact_url %>
              <li><%= link_to request.env['reseller'].contact_url.gsub('{LG}', I18n.locale.to_s) do %>
                  <i class="fa fa-phone fa-fw"></i> <%= I18n.t('web.contact') %>
                <% end %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <%= render partial: 'shared/flash_messages' %>

    </div>
  </body>
</html>
