<%= devise_error_messages! %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= t('.resend_confirmation_instructions', default: 'Resend confirmation instructions') %></h1>
      </div>
      <div class="panel-body">
        <%= bootstrap_form_for resource, as: resource_name, url: confirmation_path(resource_name), default_label_class: 'col-md-3 control-label', layout: :horizontal do |f| %>
          <%= f.email_field :email %>
          <%= f.actions(class: 'col-md-offset-3 col-md-6') do %>
            <%= f.submit t('.resend_confirmation_instructions', default: 'Resend confirmation instructions'), {}, 'fa-check' %>
          <% end %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
