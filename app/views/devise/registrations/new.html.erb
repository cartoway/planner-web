<%= devise_error_messages! %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= t('.sign_up', default: "Sign up") %></h1>
      </div>
      <div class="panel-body">
        <%= bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name), default_label_class: 'col-md-3 control-label', layout: :horizontal do |f| %>
          <%= f.email_field :email %>
          <%= f.password_field :password %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit message: t('.sign_up') %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
