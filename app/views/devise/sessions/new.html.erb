<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= t('.sign_in', default: "Sign in") %></h1>
      </div>
      <div class="panel-body">
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), default_label_class: 'col-md-3 control-label', layout: :horizontal) do |f| %>
          <%= f.text_field :email %>
          <%= f.password_field :password %>
          <% if devise_mapping.rememberable? %>
            <%= f.form_group :remember_me, { label: { text: t('.remember_me') }, control_col: 'col-md-2' } do %>
              <%= f.check_box :remember_me, label: '', checked: true %>
            <% end %>
          <% end %>
          <%= f.submit message: t('.sign_in'), icon: 'fa-check' %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
