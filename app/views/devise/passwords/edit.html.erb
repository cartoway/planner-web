<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= t('.change_your_password', default: 'Change your password') %></h1>
      </div>
      <div class="panel-body">
        <%= bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), method: :put, default_label_class: 'col-md-3 control-label', layout: :horizontal do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <%= f.password_field :password %>
          <%= f.password_field :password_confirmation %>
          <%= f.actions(class: 'col-md-offset-3 col-md-6') do %>
            <%= f.submit t('.change_my_password', default: 'Change my password') %>
          <% end %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
