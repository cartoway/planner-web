<% require 'visits_helper' %>
<%= twitter_bootstrap_fields_for 'destination[visits_attributes]', visit, index: i, layout: :horizontal do |f| %>
  <fieldset>
    <a name="visit_id=<%= visit.id %>"></a>
    <legend class="scheduler-border">
      <a data-toggle="collapse" data-parent="" href="#collapseVisit<%= visit.id || 0 %>" class="accordion-toggle"><span><%= t('.legend', n: i) %></span></a>
        <% if visit.destination.customer.enable_multi_visits || !current_page?(action: 'new') %>
          <div class="form-group destroy-block">
            <div class="col-md-3">
              <button type="button" class="btn btn-default btn-sm flag-destroy" title="<%= t('.delete_help') %>"><i class="fa fa-trash-o fa-fw"></i> <%= t('.delete') %></button>
            </div>
          </div>
        <% end %>
    </legend>
    <div id="collapseVisit<%= visit.id || 0 %>" class="collapse in">
      <%= f.hidden_field :id %>
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy do %>
        <%= t('.destroy') %>
      <% end %>
      <% if visit.destination.customer.enable_references && visit.destination.customer.enable_multi_visits %>
        <%= f.text_field :ref do %>
          <p class="help-block"><%= t '.ref_help' %></p>
        <% end %>
      <% end %>
      <% unless visit.destination.customer.enable_orders %>
      <div id="visit_quantity_input" class="form-group <%= nested_has_error?(:quantities, visit.id) %>">
        <label class="col-md-2 control-label"><%= t 'activerecord.attributes.visit.quantities' %></label>
        <div class="col-md-6">
          <% visit.destination.customer.deliverable_units.each do |du| %>
          <div class="input-group" data-deliverable_unit_id="<%= du.id %>">
            <%= number_field "destination[visits_attributes][#{i}][quantities]", du.id, value: visit.quantities && visit.quantities[du.id], placeholder: du.default_quantity && t('.quantities.default', n: du.localized_default_quantity), class: 'form-control width_1_3', step: 'any' %>
            <%= select_tag "destination[visits_attributes][#{i}][quantities_operations][#{du.id}]", options_for_select([[t('.quantities.fill'), :fill], [t('.quantities.empty'), :empty]], visit.quantities_operations[du.id]), include_blank: true, class: 'form-control width_1_3 quantities_operations', 'data-toggle' => 'popover', 'data-trigger' => 'focus', title: t('.quantities.quantities_operations_title'), 'data-content' => t('.quantities.quantities_operations_help'), 'data-placement' => 'top' %>
            <%= text_field "destination[visits_attributes][#{i}][quantities_unit]", du.id, value: du.label, class: 'form-control width_1_3', placeholder: t('deliverable_units.form.label_placeholder'), disabled: true %>
            <span class="input-group-addon"><i class="fa <%= du.default_icon %> fa-fw"></i></span>
          </div>
          <% end %>
          <p class="help-block"><%= t '.quantities.help' %></p>
        </div>
      </div>
      <% end %>
      <%= f.text_field :take_over, {
        value: visit.take_over_time_with_seconds,
        placeholder: visit.destination.customer.take_over ? visit.destination.customer.take_over_time_with_seconds + ' (' + t('.take_over_default') + ')' : t('all.unit.hour_minute_second'),
        input_group: content_tag('i', '', class: 'fa fa-clock-o fa-fw')} do %>
        <p class="help-block"><%= t '.take_over_help' %></p>
      <% end %>
      <div id="visit_open_close_input" class="form-group <%= nested_has_error?(:time_window_end_1, visit.id) %>">
        <label class="sr-only" for="destination_visits_attributes_#{i}_time_window_start_1"><%= t 'activerecord.attributes.visit.time_window_start_1' %></label>
        <label class="sr-only" for="destination_visits_attributes_#{i}_time_window_end_1"><%= t 'activerecord.attributes.visit.time_window_end_1' %></label>
        <label class="col-md-2 control-label"><%= t '.time_window_start_end_1' %></label>
        <div class="col-md-6">
          <div class="input-group">
            <span class="input-group-addon"><%= t 'web.form.from_time' %></span>
            <%= text_field "destination[visits_attributes][#{i}]", :time_window_start_1, class: 'form-control', placeholder: t('all.unit.hour_minute'), value: visit.time_window_start_1_time %>
            <span class="input-group-addon input-group-borderless"><%= t 'web.form.days' %></span>
            <%= number_field "destination[visits_attributes][#{i}]", :time_window_start_1_day,
                             class: 'form-control number-of-days',
                             placeholder: '0',
                             min: 0,
                             value: number_of_days(visit.time_window_start_1) %>
            <span class="input-group-addon"><%= t 'web.form.to_time' %></span>
            <%= text_field "destination[visits_attributes][#{i}]", :time_window_end_1, class: 'form-control', placeholder: t('all.unit.hour_minute'), value: visit.time_window_end_1_time %>
            <span class="input-group-addon input-group-borderless"><%= t 'web.form.days' %></span>
            <%= number_field "destination[visits_attributes][#{i}]", :time_window_end_1_day,
                             class: 'form-control number-of-days',
                             placeholder: '0',
                             min: 0,
                             value: number_of_days(visit.time_window_end_1) %>
            <span class="input-group-addon"><i class="fa fa-arrows-h fa-fw"></i></span>
          </div>
          <p class="help-block"><%= t '.close_help' %></p>
        </div>
      </div>
      <div id="visit_open_close_input" class="form-group <%= nested_has_error?(:time_window_end_2, visit.id) %>">
        <label class="sr-only" for="destination_visits_attributes_#{i}_time_window_start_2"><%= t 'activerecord.attributes.visit.time_window_start_2' %></label>
        <label class="sr-only" for="destination_visits_attributes_#{i}_time_window_end_2"><%= t 'activerecord.attributes.visit.time_window_end_2' %></label>
        <label class="col-md-2 control-label"><%= t '.time_window_start_end_2' %></label>
        <div class="col-md-6">
          <div class="input-group">
            <span class="input-group-addon"><%= t 'web.form.from_time' %></span>
            <%= text_field "destination[visits_attributes][#{i}]", :time_window_start_2, class: 'form-control', placeholder: t('all.unit.hour_minute'), value: visit.time_window_start_2_time %>
            <span class="input-group-addon input-group-borderless"><%= t 'web.form.days' %></span>
            <%= number_field "destination[visits_attributes][#{i}]", :time_window_start_2_day,
                             class: 'form-control number-of-days',
                             placeholder: '0',
                             min: 0,
                             value: number_of_days(visit.time_window_start_2) %>
            <span class="input-group-addon"><%= t 'web.form.to_time' %></span>
            <%= text_field "destination[visits_attributes][#{i}]", :time_window_end_2, class: 'form-control', placeholder: t('all.unit.hour_minute'), value: visit.time_window_end_2_time %>
            <span class="input-group-addon input-group-borderless"><%= t 'web.form.days' %></span>
            <%= number_field "destination[visits_attributes][#{i}]", :time_window_end_2_day,
                             class: 'form-control number-of-days',
                             placeholder: '0',
                             min: 0,
                             value: number_of_days(visit.time_window_end_2) %>
            <span class="input-group-addon"><i class="fa fa-arrows-h fa-fw"></i></span>
          </div>
          <p class="help-block"><%= t '.close_help' %></p>
        </div>
      </div>

      <div id="visit_priority_input" class="form-group <%= nested_has_error?(:priority, visit.id) %>">
        <label class="col-md-2 control-label"><%= t '.priority' %></label>
        <div class="col-md-6">
          <div class="input-group">
            <%= text_field "destination[visits_attributes][#{i}]", :priority, class: 'form-control', value: visit.priority, data: {'slider-value' => visit.priority || 0} %>
          </div>
          <p class="help-block"><%= t '.priority_help' %></p>
        </div>
      </div>

      <% if visit.destination.customer.enable_multi_visits || !visit.tags.empty? %>
        <div class="destination_visits_attributes_tag_ids_input">
          <%= f.select :tag_ids, t('activerecord.attributes.visit.tag_ids'), options_for_select(visit.destination.customer.tags.map{ |tag| [tag.label, tag.id, {'data-color' => tag.color && tag.color[1..-1], 'data-icon' => tag.icon}]}, visit.tags.collect(&:id)), {}, {multiple: true, input_group: content_tag('i', '', class: 'fa fa-tags fa-fw')} do %>
            <p class="help-block"><%= t '.tags_help' %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </fieldset>
<% end %>
